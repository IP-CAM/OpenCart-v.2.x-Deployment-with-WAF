{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "vmSize": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',concat(parameters('namePrefix'),'-VNET'))]",
    "subnetRef": "[concat(variables('vnetID'),'/subnets/',concat(parameters('namePrefix'),'-Subnet'))]",
    "lbID": "[resourceId('Microsoft.Network/loadBalancers',concat(parameters('namePrefix'),'-LB'))]",
    "imagePublisher": "Canonical",
    "imageOffer": "UbuntuServer",
    "imageSKU": "14.04.2-LTS"
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "tags": {
        "displayName": "NIC"
      },
      "name": "[concat(parameters('NamePrefix'),'-NIC')]",
      "location": "[parameters('location')]",      
      "dependsOn": [
        "[concat('Microsoft.Network/loadBalancers/', parameters('namePrefix'), '-LB')]",
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('namePrefix'),'-NSG')]"
      ],
      "properties": {
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups/', concat(parameters('namePrefix'),'-NSG'))]"
        },
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(variables('lbID'), '/backendAddressPools/LoadBalancerBackend')]"
                }
              ],
              "loadBalancerInboundNatRules": [
                {
                  "id": "[concat(variables('lbID'),'/inboundNatRules/SSH-SQL')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "tags": {
        "displayName": "MySQL Virtual Machine"
      },
      "name": "[concat(parameters('namePrefix'), '-SQL')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', parameters('namePrefix'),'-Storage')]",
        "[concat('Microsoft.Network/networkInterfaces/', parameters('namePrefix'),'-NIC')]",
        "[concat('Microsoft.Compute/availabilitySets/', parameters('namePrefix'),'-AVSet')]"
      ],
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets',concat(parameters('namePrefix'),'-AVSet'))]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('namePrefix'), '-SQL')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri": "[concat('http://',parameters('namePrefix'),'-Storage','.blob.core.windows.net/vhds/','osdisk01.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('namePrefix'),'-NIC'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://',parameters('namePrefix'),'-Storage','.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "tags": {
        "displayName": "MySQL Startup Script"
      },
      "name": "[concat(parameters('namePrefix'), '-SQL/mysql_startup_script')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('namePrefix'),'-SQL')]"
      ],
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.2",
        "settings": {
          "fileUris": [
            "https://raw.githubusercontent.com/tstanley93/OpenCart-WAF/master/OpenCart-WAF/mysql_startup_script.sh"
          ],
          "commandToExecute": "[concat('bash mysql_startup_script.sh ',parameters('adminPassword'))]"
        }
      }
    }
  ],
    "outputs": {
    }
}
